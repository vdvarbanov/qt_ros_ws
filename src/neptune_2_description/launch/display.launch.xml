<launch>
    <let name="urdf_path" 
         value="$(find-pkg-share neptune_2_description)/urdf/neptune_2.urdf.xacro" />
         
        <!-- -->                                       <!-- find the urdf file in shared dir-->
    <let name="rviz_config"
         value="$(find-pkg-share neptune_2_description)/rviz/urdf_config,rviz.rviz" />            
    
    

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
            <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
            <!-- value="$(command 'xacro $(var urdf_path)')" />-->
    </node>     

    <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui" />
    <!--maybe the problem is that we try to load the gui version-->
    <node pkg="rviz2" exec="rviz2" output="screen" args="rviz_config"/>
     
     <node pkg="neptune_2_bringup" exec="msg_to_pcl2" />
</launch>